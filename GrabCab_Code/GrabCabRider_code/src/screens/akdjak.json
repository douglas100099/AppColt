{
    "rules": {
        "About_Us": {
            ".read": "auth != null",
            ".write": false
        },
        "cancel_reason": {
            ".read": "auth != null",
            ".write": false
        },
        "notifications": {
            ".read": "root.child('users').child(auth.uid).child('isAdmin').val() === true",
            ".write": "root.child('users').child(auth.uid).child('isAdmin').val() === true"
        },
        "settings": {
            ".read": "auth != null",
            ".write": "root.child('users').child(auth.uid).child('isAdmin').val() === true"
        },
        "referral": {
            ".read": "auth != null",
            ".write": "root.child('users').child(auth.uid).child('isAdmin').val() === true"
        },
        "offers": {
            ".read": "auth != null",
            ".write": "root.child('users').child(auth.uid).child('isAdmin').val() === true"
        },
        "rates": {
            ".read": "true",
            ".write": "root.child('users').child(auth.uid).child('isAdmin').val() === true"
        },
        "chat": {
            ".read": "auth != null",
            "$bookingid": {
                ".write": "root.child('bookings').child($bookingid).child('customer').val()===auth.uid || root.child('bookings').child($bookingid).child('driver').val()===auth.uid",
                "message": {
                    "$uid": {
                        ".write": "$uid === auth.uid",
                        "$mid": {
                            ".write": "newData.child('from').val() === auth.uid"
                        }
                    }
                }
            }
        },
        "users": {
            ".read": "auth != null",
            ".write": "root.child('users').child(auth.uid).child('isAdmin').val() === true",
            "$uid": {
                ".write": "auth != null && auth.uid===$uid",
                "$usernode": {
                    ".write": "$usernode ==='waiting_riders_list' || $usernode==='approved' || $usernode==='ratings' || $usernode==='my_bookings' || $usernode==='my-booking' || $usernode==='location' || $usernode==='driverActiveStatus' || $usernode==='queue'"
                }
            },
            ".indexOn": "queue"
        },
        "bookings": {
            ".read": "auth != null",
            ".write": "root.child('users').child(auth.uid).child('isAdmin').val() === true",
            "$bookingid": {
                ".write": "newData.child('customer').val()===auth.uid || root.child('users').child(auth.uid).child('my-booking').child($bookingid).exists() || root.child('users').child(auth.uid).child('my_bookings').child($bookingid).exists() || root.child('users').child(auth.uid).child('waiting_riders_list').child($bookingid).exists()"
            },
            ".indexOn": "status"
        }
    }
}